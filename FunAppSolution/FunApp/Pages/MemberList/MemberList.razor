@page "/"
@inherits MemberListBase
@{
    if (Members == null)
    {
        <div class="spinner"></div>
    }
    else
    {
        <div>
            <iframe width="500" height="350" src="https://www.youtube.com/embed/dlCU2rCyUbs" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
        <div class="card-deck">
            <h3>Member List</h3>

            @foreach (var member in Members)
            {
                <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
                    <div class="card-header">
                        <h3>@member.Name</h3>
                    </div>
                    <div>
                        Designation:    <p>@member.Designation</p>
                        @*<div>
                                <a href="/memberdetail/@member.Id" class="btn btn-primary">Details</a>
                            </div>*@
                        <a href="@($"memberdetail/{member.Id}")"
                           class="btn btn-primary m-1">View</a>
                        <a href="@($"memberedit/{member.Id}")"
                           class="btn btn-primary m-1">Edit</a>
                    </div>
                </div>
            }
        </div>

    }
}
