@page "/"
@inherits MemberListBase

<h3>Member List</h3>

@{
    if (Members == null)
    {
        <div class="spinner"></div>
    }
    else
    {
        <div class="card-deck">
            @foreach (var member in Members)
            {
                <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
                    <div class="card-header">
                        <h3>@member.Name</h3>
                    </div>
                    <div>
                        Designation:    <p>@member.Designation</p>
                        @*<div>
                            <a href="/memberdetail/@member.Id" class="btn btn-primary">Details</a>
                        </div>*@
                        <a href="@($"memberdetail/{member.Id}")"
                           class="btn btn-primary m-1">View</a>
                    </div>
                </div>
            }
        </div>
    }
}
